<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/settings_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_anonymous_title"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black_87" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_anonymous_explanation" />

        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/share_contacts_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"/>

    </RelativeLayout>

    <View
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        style="@style/HorizontalDivider" />

    <TextView
        android:id="@+id/edit_personal_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/edit_personal_data"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black_87" />

    <View
        android:id="@+id/settings_first_divider"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        style="@style/HorizontalDivider" />

    <LinearLayout
        android:id="@+id/import_reports_from_previous_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_import_reports"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black_87" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_import_reports_explanation" />

    </LinearLayout>

</LinearLayout>